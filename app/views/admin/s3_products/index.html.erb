<h2><%= @product.name %></h2>
<p><%= @product.description %></p>

<br />

<!-- Table based layout FTL -->
<table cellspacing="0" cellpadding="0" border="0" style="border: 1px solid #aaa; padding: 3px" width="100%">
	<tr>
		<th><h3  style="margin-bottom: 15px">Associated S3 Objects</h3></th>
		<td align="right" colspan="2"><%= link_to "Add S3 Download to #{@product.name}", new_admin_product_s3_product_path(@product) %>	</td>
	</tr>
	<tr>
		<th>Title</th>
		<th colspan="2">Functions</th>
	</tr>
<% for s3_product in @s3_products -%>
	<tr>
		<td><%= link_to s3_product.title, admin_product_s3_product_path(@product, s3_product) %></td>
		<td><%= link_to 'Edit', edit_admin_product_s3_product_path(@product, s3_product) %></td>
		<td><%= link_to 'Delete', admin_product_s3_product_path(@product, s3_product), :method => :delete, :confirm => 'Really?' %></td>
	</tr>
<% end %>
</table>